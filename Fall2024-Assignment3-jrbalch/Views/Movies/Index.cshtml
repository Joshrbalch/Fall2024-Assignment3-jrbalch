@model IEnumerable<Fall2024_Assignment3_jrbalch.Models.Movie>

<head>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="movie-grid">
    @foreach (var movie in Model)
    {
        <div class="movie-item">
            <!-- Link wrapping the poster -->
            <a asp-action="Details" asp-route-id="@movie.ID">
                <!-- Display movie title above the poster -->
                <h3>@movie.Title</h3>
                <!-- Display the poster, assuming it's a file path -->
            @if (movie.Poster != null)
            {
                var base64 = Convert.ToBase64String(movie.Poster);
                var imgSrc = $"data:image/jpeg;base64,{base64}"; // Assuming the poster is a jpeg
                <img src="@imgSrc" height="200" width="150" />
            }

            </a>
        </div>
    }
</div>