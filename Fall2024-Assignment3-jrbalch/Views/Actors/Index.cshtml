@model IEnumerable<Fall2024_Assignment3_jrbalch.Models.Actor>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@{
    ViewData["Title"] = "Index";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="actor-grid">
    @foreach (var actor in Model)
    {
        <div class="actor-item">
            <!-- Link wrapping the poster -->
            <a asp-action="Details" asp-route-id="@actor.Id">
                <!-- Display movie title above the poster -->
                <h3>@actor.Name</h3>
                <!-- Display the poster, assuming it's a file path -->
                @if (actor.Photo != null)
                {
                    var base64 = Convert.ToBase64String(actor.Photo);
                    var imgSrc = $"data:image/jpeg;base64,{base64}"; // Assuming the poster is a jpeg
                    <img src="@imgSrc" height="200" width="150" />
                }

            </a>
        </div>
    }
</div>